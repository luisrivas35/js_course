<form id="editContainer">
    <div class="container">
      <h1>Edit Sport</h1>
      <div class="border rounded p-4">
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">ID</label>
          <div class="col-sm-10">
            <input id="id" type="text" class="form-control" name="id" />
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
            <input id="name" type="text" class="form-control" name="name" />
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Price</label>
          <div class="col-sm-10">
            <input id="price" type="text" class="form-control" name="price" />
          </div>
        </div>
        <button type="button" class="btn btn-info"  href="/edit" id="editSportBtn">Edit Sport</button>
      </div>
      <div id="successMessage" style="display: none;" class="mt-3 alert alert-success">Sport edited successfully!</div>
      <div id="errorMessage" style="display: none;" class="mt-3 alert alert-danger">Error!!! Sport does not exist!</div>
    </div>
  </form>